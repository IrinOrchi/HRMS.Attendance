@model HRMS.Attendance.DTOs.LeaveRequestDto

<h2>Delete Leave Request</h2>

<div>
    <h3>Are you sure you want to delete this leave request?</h3>
    <div>
        <h4>@Model.EmployeeName</h4>
        <p>@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</p>
    </div>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
